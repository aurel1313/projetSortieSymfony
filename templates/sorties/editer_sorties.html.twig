{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1 class="mb-4">{{ app.request.get('_route') == "app_sorties_ajouter" ? 'Ajouter' : 'Modifier' }} une sortie</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col-4">
                {{ form_row(form.nom) }}
            </div>
            <div class="col-4">
                {{ form_row(form.date_heure_debut) }}
            </div>
            <div class="col-4">
                {{ form_row(form.duree) }}
            </div>
            <div class="col-4">
                {{ form_row(form.date_limite_inscription) }}
            </div>
            <div class="col-4">
                {{ form_row(form.nombre_inscription_max) }}
            </div>
            <div class="col-4">
                {{ form_row(form.info_sorties) }}
            </div>
            <div class="col-4">
                {{ form_row(form.photo_sorties) }}
            </div>
            <div class="col-4">
                {{ form_row(form.participant_idparticipant_id, { 'attr': {'style': 'display: none;'}}) }}


                    {# Affiche uniquement le user connect√© #}



                {% for users in form.participant_idparticipant_id.vars.choices  %}

                    {% if users.data.id== app.user.id %}
                    <label>Organisateur: </label>
                        {{ users.data.pseudo }}
                    {% endif %}
                {% endfor %}



            </div>
            <div class="col-4">
                {{ form_row(form.site_idsite) }}
            </div>
            <div class="col-4">
                {{ form_row(form.etat_idetat) }}
            </div>
            <div class="col-4">
                {{ form_row(form.lieu_idlieu) }}
            </div>
            <div class="col-4">
                {{ form_row(form.motif_annulation) }}
            </div>

        </div>

        {% if app.request.get('_route') == "app_sorties_ajouter" %}
            <button class="btn btn-success" type="submit">Ajouter</button>
        {% else %}
            <button class="btn btn-primary" type="submit">Modifier</button>
        {% endif %}

        {{ form_end(form) }}
    </div>
{% endblock %}
