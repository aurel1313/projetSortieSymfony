{% extends 'base.html.twig' %}

{% block title %}Sortie - Administration{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class="text-center">Administration</h1>

    <div class="container p-5">
        <div class="row">
            <div class="col-lg-3 col-md-6 text-center">
                <a href="{{ path('app_admin_sorties_lister') }}" type="button" class="btn btn-primary">Gestion sorties</a>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <a href="{{ path('app_admin_villes_lister') }}" type="button" class="btn btn-primary"> Gestion villes</a>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <a href="{{ path('app_admin_sites_lister') }}" type="button" class="btn btn-primary">Gestion sites</a>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <a href="{{ path('app_admin_lieux_lister') }}" type="button" class="btn btn-primary">Gestion Lieux</a>
            </div>
        </div>
    </div>
    {{ dump(form.nom) }}
    <section class="vh-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    {% if app.request.get('_route')=='app_admin' %}
                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color: #000000;">Ajouter Participant</p>
                                    {% else %}
                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color: #000000;">Modifier Participant</p>
                                    {% endif %}
                                    {{ form_start(form, {'attr' : {'class' : 'mx-1 mx-md-4'}}) }}

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.email, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.password, {'attr' : {'class' : 'form-control'}})}}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.pseudo, {'attr' : {'class' : 'form-control'}})}}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">

                                            {{ form_row(form.nom,{'default': 'Nom par défaut', 'attr' : {'class' : 'form-control','disabled': app.request.get('_route') == 'app_admin_modifier'}})}}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">

                                            {{ form_row(form.prenom, {'attr' : {'class' : 'form-control','disabled': app.request.get('_route') == 'app_admin_modifier'}})}}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.telephone, {'attr' : {'class' : 'form-control'}})}}
                                        </div>
                                    </div>

                                    <div class="cache_selection">
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                {{ form_row(form.administrateur,{'attr' : { 'disabled': app.request.get('_route') == 'app_admin'}})}}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="cache_selection">
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                {{ form_row(form.actif,{'attr' : { 'disabled': app.request.get('_route') == 'app_admin'}})}}
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fa-solid fa-user fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.site_idsite, {'attr' : {'class' : 'form-control'}})}}
                                        </div>
                                    </div>
                                    {{ form_row(form.photoProfil, {'label': false,'attr': {'style': 'display: none;'}}) }}

                                    {% if app.request.get('_route') == 'app_admin' %}
                                        <button class="btn btn-success" type="submit">Ajouter</button>
                                    {% else %}
                                        <button class="btn btn-success" type="submit">Modifier</button>
                                    {% endif %}

                                    {{ form_end(form)}}

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src={{asset('image/pngwing.com.png')}} class="card-img-top" alt="logo_sortie.com">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <h2 class="text-center mt-3">Les participants</h2>

    <table class="table table-striped">
        <thead>
        <tr class="text-center">
            <th>Nom</th>
            <th>Prenom</th>
            <th>Pseudo</th>
            <th>Téléphone</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for participant in participants %}
            <tr class="text-center">
                <td>{{ participant.nom }}</td>
                <td>{{ participant.prenom }}</td>
                <td>{{ participant.pseudo }}</td>
                <td>{{ participant.telephone }}</td>
                <td>
                    <a class="btn btn-success" type="submit"  href="{{ path('app_admin_modifier',{'id':participant.id}) }}">Modifier</a>
                    <a class="btn btn-warning" type="submit"  href="{{ path('app_admin_supprimer',{'id':participant.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
