{% extends 'base.html.twig' %}

{% block title %}Sortie - Connexion{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <section class="vh-100">
        <div class="container-fluid h-custom">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-md-9 col-lg-6 col-xl-5">
                    <img src={{asset('image/pngwing.com.png')}} class="card-img-top" alt="logo_sortie.com">
                </div>
                <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                    <form action="{{ path('app_login') }}" method="post">

                        <div class="form-outline mb-4">
                            <label for="username">Email:</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                        </div>

                        <!-- Password input -->
                        <div class="form-outline mb-3">
                            <label for="password">Mot de passe:</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                        </div>

                        <label><input type="checkbox" name="_remember_me"> Se souvenir de moi</label>
                        <a href="{{ path('app_forgot_password_request') }}" class="ms-5">Mot de passe oubli√© ?</a>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="text-center text-lg-start mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg"
                                    style="padding-left: 2.5rem; padding-right: 2.5rem;">Connexion</button>
                            <p class="small fw-bold mt-2 pt-1 mb-0" style="color: #000000">Vous n'avez pas de compte? <a href="/register" class="link-danger">Inscription</a></p>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>
</form>
{% endblock body %}