{% extends 'base.html.twig' %}

{% block title %}Vos Sorties{% endblock %}

{% block body %}

    <section class="vh-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                                    {% if app.request.get('_route') == 'app_admin_sorties_ajouter' %}
                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color: #000000;">Ajouter Sortie</p>
                                    {% else %}
                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4" style="color: #000000;">Modifier Sortie</p>
                                    {% endif %}

                                    {{ form_start(form, {'attr' : {'class' : 'mx-1 mx-md-4'}}) }}

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.nom, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.date_heure_debut, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.duree, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.date_limite_inscription, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.nombre_inscription_max, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.info_sorties, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.photo_sorties, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.motif_annulation, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.participant_idparticipant_id, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.site_idsite, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

                                    <div class="d-flex flex-row align-items-center mb-4">
                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                        <div class="form-outline flex-fill mb-0">
                                            {{ form_row(form.etat_idetat_id, {'attr' : {'class' : 'form-control'}}) }}
                                        </div>
                                    </div>

{#                                    <div class="d-flex flex-row align-items-center mb-4">#}
{#                                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>#}
{#                                        <div class="form-outline flex-fill mb-0">#}
{#                                            {{ form_row(form.lieu_idlieu_id, {'attr' : {'class' : 'form-control'}}) }}#}
{#                                        </div>#}
{#                                    </div>#}

                                    {% if app.request.get('_route') == 'app_admin_sorties_ajouter' %}
                                        <button class="btn btn-success" type="submit">Ajouter</button>
                                    {% else %}
                                        <button class="btn btn-success" type="submit">Modifier</button>
                                    {% endif %}

                                    {{ form_end(form)}}

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src={{asset('image/pngwing.com.png')}} class="card-img-top" alt="logo_sortie.com">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
